<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="contactForm" type="com.web.ContactForm"></form-bean>

  </form-beans>

  <global-exceptions />
  <global-forwards >
    

  </global-forwards>

  <action-mappings >
    <action path="/list" type="com.web.ListContactAction">
      <set-property property="cancellable" value="true" />
      <forward name="success" path="/list.jsp" />
    </action>
    <action path="/add" type="com.web.AddContactAction" name="contactForm">
      <set-property property="cancellable" value="true" />
      <forward name="success" path="/list.do" />
    </action>

  </action-mappings>

  <message-resources parameter="com.struts.ApplicationResources" />
</struts-config>

